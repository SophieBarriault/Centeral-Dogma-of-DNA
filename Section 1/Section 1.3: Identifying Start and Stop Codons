import Section-1.2:-Transcribing-DNA-into-RNA 

def section_3 (rna_data):


  # define start and stop codons
  start_codons = [each.lower() for each in ['AUG']]
  stop_codons = [each.lower() for each in ['UGA', 'UAA', 'UAG']] 

  startcodon_positions = {}
  stopcodon_positions = {}
  start_counts = {}
  stop_counts = {}

  for id, sequence in rna_data.items():

    start_count = 0

    sequence = sequence.lower()

    start_position = []
    stop_position = []

    for codon in start_codons:
      current_index = 0
      while current_index < len(sequence):
              current_index = sequence.find(codon, current_index)
              if current_index == -1:
                break
              start_position.append(current_index)
              current_index += 1
              start_count += 1

    stop_count = 0

    for codon in stop_codons:
        current_index = 0
        while current_index < len(sequence):
                current_index = sequence.find(codon, current_index)
                if current_index == -1:
                  break
                stop_position.append(current_index)
                current_index += 1
                stop_count += 1



        startcodon_positions[id] = start_position
        stopcodon_positions[id] = stop_position

        start_counts[id] = start_count
        stop_counts[id] = stop_count

      # Print results
        print(f"Sequence Number: {id}")
        print(f"  Start codon found ({start_codons}): {start_position}")
        print(f"  Stop codon(s) found ({stop_codons}): {stop_position}") 


          # some helpful code for plotting (define variables as appropriate)
  fig, ax = plt.subplots()
  x_labels = list(rna_data.keys())
  y_label = "Number of bases"
  title = "Number of bases as a function of base type (Sequence 8)"
  start_values = [start_counts[id] for id in x_labels]
  stop_values = [stop_counts[id] for id in x_labels]
  x = range(len(x_labels))
  #ax.bar(x_values, y_values)
  bar_width = 0.5
  ax.bar([i - bar_width / 2 for i in x], start_values, width=bar_width, label='Start Codons', color='lavender')
  ax.bar([i + bar_width / 2 for i in x], stop_values, width=bar_width, label='Stop Codons', color='cyan')

  ax.set_xticks(x)
  ax.set_xticklabels(x_labels, rotation=45)
  ax.set_ylabel("Number of Codons")
  ax.set_title("Start and Stop Codon Counts per Sequence")
  ax.legend()
  plt.tight_layout()
  plt.show()


  return start_counts, stop_counts #not global, but relied on by section 5 and last section

section_3(rna_data) 
