def transcription(DNA_seqs_dict):

  RNA_dict = {}
  trans_table = str.maketrans('ATGC', 'UACG')

  for name, DNA in DNA_seqs_dict.items():
    RNA = DNA.upper().translate(trans_table)
    #RNA = DNA.replace('a', 'u'; 't', 'a'; 'g', 'c'; 'c', 'g')
    #RNA = DNA.replace('a', 'u'
    #RNA1 = DNA.replace('t', 'a')
    #RNA2 = DNA.replace('g', 'c')
    #RNA3 = DNA.replace('c', 'g')


    RNA_dict[name] = RNA

  return RNA_dict

rna_data = transcription(DNA_dict)
rna_data2 = transcription(DNA1)
rna_data3 = transcription(DNA2)
rna_data4 = transcription(DNA3)
print("RNA, Original Seqeunces:", rna_data)
print("RNA, Insert Shift Mutation:", rna_data2)
print("RNA, Delete Shift Mutation:", rna_data3)
print("RNA, Point Mutation:", rna_data4)




